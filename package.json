{
  "name": "miarte-backend",
  "version": "1.0.0",
  "description": "This is the backend from miarte.com.pe",
  "main": "index.js",
  "engines": {
    "node": "16.18.0",
    "npm": "please-use-yarn",
    "yarn": "1.22.19"
  },
  "scripts": {
    "dev": "set NODE_ENV=development&& ts-node-dev --respawn --transpile-only src/app/start.ts",
    "test": "yarn test:unit && yarn test:features",
    "test:unit": "set NODE_ENV=test&& jest",
    "test:features": "set NODE_ENV=test&& cucumber-js",
    "config:rabbitmq": "set NODE_ENV=production&& ts-node src/app/commands/runConfigureRabbitMqCommand.ts",
    "build": "yarn build:clean && yarn build:tsc && yarn build:di",
    "build:clean": "rm -r dist",
    "build:tsc": "tsc -p ./tsconfig.prod.json",
    "build:di": "xcopy .env.production dist && cd dist && mkdir uploads",
    "start": "set NODE_ENV=production&& node dist/src/app/start.js"
  },
  "keywords": [],
  "author": "acerohernan",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^8.7.0",
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.2.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "helmet": "^6.0.0",
    "http-status": "^1.5.3",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0",
    "ts-node": "^10.9.1"
  }
}
